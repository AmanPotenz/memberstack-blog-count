# Airtable Configuration
# Get your API key from: https://airtable.com/account
AIRTABLE_API_KEY=your_airtable_api_key_here

# Find your base ID in the Airtable API docs for your base
# It starts with "app" followed by alphanumeric characters
AIRTABLE_BASE_ID=your_base_id_here

# The name of your Airtable table (e.g., "Blog Posts")
AIRTABLE_TABLE_NAME=Blog Posts

# Webflow Configuration (Optional - for auto-fetching blog titles)
# Get your API token from: https://webflow.com/dashboard/account/apps
WEBFLOW_API_TOKEN=your_webflow_api_token_here

# Find your collection ID in Webflow CMS settings
WEBFLOW_COLLECTION_ID=your_collection_id_here

# Find your site ID in Webflow site settings
WEBFLOW_SITE_ID=your_site_id_here
